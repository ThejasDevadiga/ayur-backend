head
  title Pug
  script(type='text/javascript').
  link(href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css' rel='stylesheet')
  link(href='https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap' rel='stylesheet')
  link(href='https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.3.1/mdb.min.css' rel='stylesheet')
include ../Navbar/navbar.pug

section(style='background-color:  #eee;')
  .container.py-5
    .row
      .col 
        h5 User profile
    .row
      .col-lg-4
        .card.mb-4
          .card-body.text-center
            img.rounded-circle.img-fluid(src='https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp' alt='avatar' style='width: 150px;')
            h5.my-3 #{Name} 
            p.text-muted.mb-1 #{Phone} 
            p.text-muted.mb-4 #{patientId}
            .d-flex.justify-content-center.mb-2
              button.btn.btn-primary(type='button' disabled) #{Status}
              //- button.btn.btn-outline-primary.ms-1(type='button') Message
        .card.mb-4.mb-lg-0
          .card-body.p-0
            ul.list-group.list-group-flush.rounded-3
              li.list-group-item.d-flex.justify-content-between.align-items-center.p-3
                h5.text-secondary Weight
                p.mb-0 
                  strong.text-primary #{weight} 
              li.list-group-item.d-flex.justify-content-between.align-items-center.p-3
                h5.text-secondary Height
                p.mb-0
                  strong.text-primary #{height} 
              li.list-group-item.d-flex.justify-content-between.align-items-center.p-3
                h5.text-secondary Blood Pressure
                p.mb-0 
                  strong.text-primary #{bloodPressure}
              li.list-group-item.d-flex.justify-content-between.align-items-center.p-3
                h5.text-secondary Resp. Rate
                p.mb-0
                  strong.text-primary #{respiratoryRate} 
              li.list-group-item.d-flex.justify-content-between.align-items-center.p-3
                h5.text-secondary Date
                p.mb-0 
                  strong.text-primary #{Date}
      .col-lg-8
        .card.mb-4
          .card-body
            .row
              .col-sm-3
                p.mb-0 Full Name
              .col-sm-9
                p.text-muted.mb-0 #{Name}  
            hr
            .row
              .col-sm-3
                p.mb-0 Gender
              .col-sm-9
                p.text-muted.mb-0 #{Gender}  
            hr
            .row
              .col-sm-3
                p.mb-0 Mobile
              .col-sm-9
                p.text-muted.mb-0 #{Phone}  
            hr
            .row
              .col-sm-3
                p.mb-0 Address
              .col-sm-9
                p.text-muted.mb-0 #{Address}  
            hr
            .row
              .col-sm-3
                p.mb-0 Hostel
              .col-sm-9
                p.text-muted.mb-0 #{hostelName} Hostel Name
        
        .row.gy-3.mh-50.overflow-y-scroll(style="height:27rem" data-mdb-perfect-scrollbar='true')
          each Appointment in Appointments
            .col-md-6
              .card.mb-4.mb-md-0
                .card-body
                  p.mb-4
                    span.font-italic.m-3.strong Date :   
                    strong.text-primary #{Appointment.Timing['date']}
                    span.font-italic.m-3.strong Time :   
                    strong.text-primary #{Appointment.Timing['time']}.00
                  .row
                    .col-sm-6
                      p.mb-0.text-secondary Doctor Name
                    .col-sm-6
                      p.text-muted.mb-0.text-success 
                        strong #{Appointment.DoctorID["Name"]} 
                  hr
                  .row
                    .col-sm-6
                      p.mb-0.text-secondary Venue :
                    .col-sm-6
                      p.mb-0.text-secondary #{Appointment.Hospital["Name"]}, #{Appointment.Hospital["Branch"]} 
                  hr
                 
                  .d-flex.justify-content-center.m-2
                    button.btn.viewApp.btn-primary(id=Appointment['AppointmentID']) View more
    .row.d-flex.justify-content-center.m-2
      .col-sm-3 
        button.btn.btn-primary(type='button' onclick="window.history.go(-1); return false;") Back
script(src="/js/receptionist/profile.js")        
script(type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.3.1/mdb.min.js')
